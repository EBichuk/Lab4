using System;

namespace Utils
{
    class Program
    {
        static void Main(string[] args)
        {
            int x;
            int y;

            Console.WriteLine("Введите первое число:");
            x = int.Parse(Console.ReadLine());
            Console.WriteLine("Введите второе число:");
            y = int.Parse(Console.ReadLine());

            // тестирование метода Greater
            int greater = Utils.Greater(x, y);

            Console.WriteLine("Большим из чисел {0} и {1} является {2} ", x, y, greater);

            // тестирование метода Swap 
            Utils.Swap(ref x, ref y);
            Console.WriteLine("До swap: \t" + x + " " + y);

            Utils.Swap(ref x, ref y);
            Console.WriteLine("После swap: \t" + x + " " + y);

            // тестирование метода Factorial 
            int f;
            bool ok;
            Console.WriteLine("Number for factorial:");
            x = int.Parse(Console.ReadLine());

            ok = Utils.Factorial(x, out f);

            if (ok)
                Console.WriteLine("Факториал(" + x + ") = " + f);
            else
                Console.WriteLine("Cannot compute this factorial");

            // тестирования расчета площади
            Console.WriteLine("Треугольник равносторонний? (да или нет)");
            string tre = Console.ReadLine();
            double area;

            if (tre == "да")
            {
                Console.WriteLine("Введите сторону ");
                double a = double.Parse(Console.ReadLine());
                area = Operation.AreaEquil(a);
                Console.WriteLine("Площадь треугольника = " + area);
            }
            else if (tre == "нет")
                {
                    Console.WriteLine("Введите стороны ");
                    double a = double.Parse(Console.ReadLine());
                    double b = double.Parse(Console.ReadLine());
                    double c = double.Parse(Console.ReadLine());
                    area = Operation.AreaEquil(a, b, c);
                    Console.WriteLine("Площадь треугольника = " + area);
                }
                else
                Console.WriteLine("Некорректные данные");

            // тестирование метода нахождения корней уравнения
            double x1=0, x2=0;
            Console.WriteLine("a=");
            double a1 = double.Parse(Console.ReadLine());
            Console.WriteLine("b=");
            double b1 = int.Parse(Console.ReadLine());
            Console.WriteLine("c=");
            double c1 = int.Parse(Console.ReadLine());

            int Res = Kvadr.Discriminant(a1, b1, c1, ref x1, ref x2);

            if (Res == -1)
                Console.WriteLine("Корней уравнения с коэффициентами a = {0}, b = {1}, c = {2} результатa нет.", a1, b1, c1);
            else 
                if (Res == 0)
                    Console.WriteLine("Корней уравнения с коэффициентами a = {0}, b = {1}, c = {2}  равны один x1= x2 = {3}  .", a1, b1, c1, x1);
                else
                    Console.WriteLine("Корней уравнения с коэффициентами a = {0}, b = {1}, c = {2}  равны x1= {3} x2 = {4}  .", a1, b1, c1, x1, x2);
        }
    }
}
